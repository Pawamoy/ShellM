#!/bin/bash

## \brief rename a file
## \require coreutils

include core/shellman.sh
include core/init/data.sh

[ $# -eq 0 ] && usage

main() {
  case $1 in
    ## \option -h, --help
    ## Prints this help and exit
    -h|--help) shellman -t "$0"; exit 0 ;;
  esac

  if [ -e "$shellm/usr/bin/$1" ]; then
    mv "$shellm/usr/bin/$1" "$shellm/usr/bin/$2"
    data_dir=$(get_data_dir)
    if [ -e "${data_dir}" ]; then
      mv "${data_dir}" "${data_dir%/*}/$2"
  elif [ -e "$shellm/usr/lib/$1" ]; then
    mv "$shellm/usr/lib/$1" "$shellm/usr/lib/$2"
  else
    echo "ren: $1: no such file in shellm bin or lib" >&2
    exit 1
  fi
}

## \usage FILENAME NEW_NAME
main "$@"
