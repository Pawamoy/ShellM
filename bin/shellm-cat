#!/bin/bash

## \brief Print the contents of a file to sdout.
## \require coreutils

include core/shellman.sh

[ $# -eq 0 ] && usage

main() {
  case $1 in
    ## \option -h, --help
    ## Prints this help and exit
    -h|--help) shellman "$0"; exit 0 ;;
  esac

  # shellcheck disable=SC2154
  if [ -f "${SHELLM_USR}/bin/$1" ]; then
    if [ -n "$2" ]; then
      $2 "${SHELLM_USR}/bin/$1"
    else
      cat "${SHELLM_USR}/bin/$1"
    fi
  elif [ -f "${SHELLM_USR}/lib/${1%.sh}.sh" ]; then
    if [ -n "$2" ]; then
      $2 "${SHELLM_USR}/lib/${1%.sh}.sh"
    else
      cat "${SHELLM_USR}/lib/${1%.sh}.sh"
    fi
  else
    echo "shell: cat: $1: no such file in bin or lib" >&2
    exit 1
  fi
}

## \usage shellm-cat FILENAME [CMD] | -h
main "$@"
