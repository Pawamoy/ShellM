#!/bin/bash
## \usage shellm-run script args
## \brief Load shellm then run a script.
export XRUN=1

# shellcheck disable=SC1090
. "${HOME}/.shellm/init.sh" ""
shellm load

script=$1; shift

if [ -f "${script}" ]; then
  # shellcheck disable=SC1090
  . "${script}" "$@"
elif [ -f "${SHELLM_USR}/bin/${script}" ]; then
  # shellcheck disable=SC1090
  . "${SHELLM_USR}/bin/${script}" "$@"
fi
