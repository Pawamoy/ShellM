#!/bin/bash

## \brief Run the test suite.
## \require coreutils

shellm-include core/shellman.sh


main() {
  local tests

  case $1 in
    ## \option -h, --help
    ## Prints this help and exit
    -h|--help) shellman "$0"; exit 0 ;;
  esac

  (
    cd "${SHELLM_USR}" || return 1
    bats "${@:-tests}"
  )
}

## \usage shellm-test
main "$@"
